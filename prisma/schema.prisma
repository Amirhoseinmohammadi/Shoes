// prisma/schema.prisma
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // مسیر فایل SQLite
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  cartItems CartItem[]
}

model Product {
  id      Int      @id @default(autoincrement())
  name    String
  brand   String
  price   Int
  image   String
  color   String
  size    Int
  CartItems CartItem[]
}

model CartItem {
  id        Int     @id @default(autoincrement())
  user      User    @relation(fields: [userId], references: [id])
  userId    Int
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int
}
